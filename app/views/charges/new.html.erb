<div class="jumbotron">
	<h1>Order Confirmation & Payment<br>
		<small>pay for your shit</small></h1>
</div>

<div class="container" style="padding-top:10px">
	<div class="row">
		<div class="col-md-4 col-md-offset-2 col-sm-push-6">
			<div class="well">
				Delivery Address:
				<br>
				<%= @current_user.first_name %> <%= @current_user.last_name %>
				<br>
				<%= @shipping_address['address1'] %>
				<br>
				<% if @shipping_address['address2'] != "" %>
					<%= @shipping_address['address2'] %>
					<br>
				<% end %>
				<%= @shipping_address['city'] %>
				<br>
				<%= @shipping_address['state'] %>
				<br>
				<%= @shipping_address['zip'] %>
				<br>
				<br>
				Phone Number: <%= @shipping_address['phone'] %>
				<br>
				<br>
				Delivery Date: <%= @shipping_address['date'] %>
				Delivery Time: <%= @shipping_address['time'] %>
				<hr>
			</div>
		</div>
		<div class="clearfix hidden-md hidden-lg"></div>
		<div class="col-md-4 col-sm-pull-6">
			<div class="well">
				<h4>Order Summary:</h4>
				<br>
				<p>Item: <%= @box.name %><br>
				Shipping & Handling: $0.00<br>
				Tax: $0.00</p>
				<hr>
				<h4>Order Total: $<%= @box.price %>0</h4>
				<hr>
				<%= form_tag charges_path do  %>
				<%= hidden_field_tag :box_id, @box.id%>
				<%= hidden_field_tag :date, @shipping_address['date'] %>
				<%= hidden_field_tag :time, @shipping_address['time'] %>
				<%= hidden_field_tag :address1, @shipping_address['address1'] %>
				<%= hidden_field_tag :address2, @shipping_address['address2'] %>
				<%= hidden_field_tag :city, @shipping_address['city'] %>
				<%= hidden_field_tag :state, @shipping_address['state']%>
				<%= hidden_field_tag :zip, @shipping_address['zip'] %>
				<%= hidden_field_tag :phone, @shipping_address['phone'] %>
				  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
				          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
				          data-description="<%= @box.name %> Box"
				          data-amount="6000"></script>
				<% end %>
			</div>
		</div>
	</div>
</div>

